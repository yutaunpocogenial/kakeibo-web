<p id="notice"><%= notice %></p>

<h1 id="cost">支出一覧</h1>

<div class="tablecost">

<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>支出名</th>
      <th>値段</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @costs.each do |cost| %>
      <tr>
        <td><%= cost.created_at.strftime('%Y/%m/%d')%></td>
        <td><%= cost.name %></td>
        <td><%= cost.cost %></td>
        
        <td><button type="button" class="btn btn-outline-primary btn-lg"><%= link_to '詳細', cost %></button></td>
        <td><button type="button" class="btn btn-outline-primary btn-lg"><%= link_to '編集', edit_cost_path(cost) %></button></td>
        <td><button type="button" class="btn btn-outline-primary btn-lg"><%= link_to '削除', cost, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>

<br>

<button type="button" class="btn btn-outline-primary btn-lg">
<%= link_to '追加', new_cost_path %>
</button>

<button type="button" class="btn btn-outline-primary btn-lg">
<%= link_to '戻る', 'nows#index' %>
</button>